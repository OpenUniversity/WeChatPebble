<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <!--
         NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it.
    -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:defaultValue="STD_PINYIN"
        android:entries="@array/pref_notification_type_titles"
        android:entryValues="@array/pref_notification_type_values"
        android:key="message_type"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_notification_type" />
    
    <!--
         NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it.
    -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:defaultValue="20"
        android:entries="@array/pref_notification_timeout_titles"
        android:entryValues="@array/pref_notification_timeout_values"
        android:key="message_timeout"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_notification_timeout" />
    
    
</PreferenceScreen>
